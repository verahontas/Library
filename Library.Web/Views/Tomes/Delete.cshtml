@model Library.Model.Tome

@{
    ViewData["Title"] = "Delete";
}

<h1>Törlés</h1>

<h3>Biztosan törölni akarja ezt a kötetet?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Book)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Book.Author)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Törlés" class="btn btn-danger" /> |
        <a asp-controller="Home" asp-action="Index">Vissza a könyvek listájához</a>
    </form>
</div>
