@model Library.Model.Tome

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Tome</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookId" class="control-label"></label>
                <select asp-for="BookId" class ="form-control" asp-items="ViewBag.BookId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Létrehozás" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div>
        Könyvek azonosítója:
        <ul>
            @foreach(var book in ViewBag.Books)
            {
                <li>@book.Id . @book.Title</li>
            }
        </ul>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Vissza a könyvek listájához</a>
</div>

